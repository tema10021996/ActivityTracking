@model List<string>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";

}

<div class="panel panel-default">
    <div class="panel-heading">
        <div class="text-right">
            @using (Html.BeginForm("FindUserReport", "Manager"))
            {
                <div class="input-group">
                    @Html.Hidden("returnUrl", Request.Url.PathAndQuery)
                    @Html.TextBox("userName", null, new { @class = "form-control", placeholder = "Search user by login", style = "width:200px" })
                    <div class="input-group-btn">
                        <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                    </div>
                </div>
            }
        </div>
        <h4 class="text-center"><b>My departments</b></h4>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-center">Department</th>
                <th class="text-center">Show users</th>
                <th class="text-center">Show report</th>
                <th class="text-center">Show report by users</th>
            </tr>
            @foreach (var department in Model)
            {
                <tr>
                    <td class="text-left">@department</td>
                    <td class="text-center">
                        @using (Html.BeginForm("ShowDepartmentUsers", "Manager"))
                        {
                            @Html.Hidden("departmentName", department)
                            <input type="submit" class="btn btn-primary btn-sm" value="Show users" />
                        }
                    </td>
                    <td class="text-center">
                        @using (Html.BeginForm("ShowDepartmentReportWithValidation", "Manager", new { DepartmentList = department, Start = DateTime.Now.AddDays(-7).Date,
                                End = DateTime.Now.AddDays(-1).Date, BarChart = true, PieChart = false, ColumnChart = false }))
                        {
                            @Html.Hidden("DepartmentList", department)
                            @Html.Hidden("Start", DateTime.Now.AddDays(-7).Date)
                            @Html.Hidden("End", DateTime.Now.AddDays(-1).Date)
                            <input type="submit" class="btn btn-primary btn-sm" value="Show report" />
                        }
                    </td>
                    <td class="text-center">
                        @using (Html.BeginForm("ShowDepartmentReportByUsersWithValidation", "Manager", new { DepartmentList = department, Start = DateTime.Now.AddDays(-7).Date,
                                End = DateTime.Now.AddDays(-1).Date}))
                        {
                            @Html.Hidden("departmentName", department)
                            @Html.Hidden("start", DateTime.Now.AddDays(-7).Date)
                            @Html.Hidden("Snd", DateTime.Now.AddDays(-1).Date)
                            <input type="submit" class="btn btn-primary btn-sm" value="Show report" />
                        }
                    </td>                   
                </tr>
            }
        </table>
    </div>
</div>