@model ActivityTracking.WebClient.Models.ManagerIndexViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";

}

<div class="panel panel-default">
    <div class="panel-heading">
        <div class="text-right">
            @using (Html.BeginForm("FindUserReport", "Manager"))
            {
                <div class="input-group">
                    @Html.Hidden("returnUrl", Request.Url.PathAndQuery)
                    @Html.TextBox("userName", null, new { @class = "form-control", placeholder = "Search user by login", style = "width:200px" })
                    <div class="input-group-btn">
                        <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                    </div>
                </div>
            }
        </div>
        <br>     
    </div>
    <div id ="tableDiv">  
            <ul class="nav nav-tabs nav-justified">
                <li class="active" onclick="ChangeDepartmentDivHeight()"><a data-toggle="tab" href="#departments" style="color: #555555;"><h4>My deparments</h4></a></li>
                <li onclick="ChangeTeamDivHeight()"><a data-toggle="tab" href="#teams" style="color: #555555;"><h4>My teams</h4></a></li>
            </ul>
        <br>
            <div class="tab-content" style="padding: 15px">
                <div id="departments" class="tab-pane fade in active" style="width:81.2%">                
                    <table class="table table-striped table-condensed table-bordered">
                        <tr>
                            <th class="text-center">Department</th>
                            <th class="text-center">Show users</th>
                            <th class="text-center">Show report</th>
                            <th class="text-center">Show report by users</th>
                        </tr>
                        @foreach (var departmentName in Model.DepartmentNames)
                        {
                            <tr>
                                <td class="text-left">@departmentName</td>
                                <td class="text-center">
                                    @using (Html.BeginForm("ShowDepartmentUsers", "Manager"))
                                    {
                                        @Html.Hidden("departmentName", departmentName)
                                        <input type="submit" class="btn btn-primary btn-sm" value="Show users" />
                                    }
                                </td>
                                <td class="text-center">
                                    @using (Html.BeginForm("ShowDepartmentReportWithValidation", "Manager"))
                                    {
                                        @Html.Hidden("returnUrl", Request.Url.PathAndQuery)
                                        @Html.Hidden("BarChart", true)
                                        @Html.Hidden("PieChart", false)
                                        @Html.Hidden("ColumnChart", false)
                                        @Html.Hidden("DepartmentList", departmentName)
                                        @Html.Hidden("isDefaultRequest", true)
                                        <input type="submit" class="btn btn-primary btn-sm" value="Show report" />
                                    }
                                </td>
                                <td class="text-center">
                                    @using (Html.BeginForm("ShowDepartmentReportByUsersWithValidation", "Manager"))
                                    {
                                        @Html.Hidden("departmentName", departmentName)
                                        @Html.Hidden("isDefaultRequest", true)
                                        <input type="submit" class="btn btn-primary btn-sm" value="Show report" />
                                    }
                                </td>
                            </tr>
                        }
                    </table>
                </div>
                <div id="teams" class="tab-pane fade" style="width:81.1%">
                    <table class="table table-striped table-condensed table-bordered">
                        <tr>
                            <th class="text-center">Team</th>
                            <th class="text-center">Show users</th>
                            <th class="text-center">Show report</th>
                            <th class="text-center">Show report by users</th>
                        </tr>
                        @foreach (var teamName in Model.TeamNames)
                        {
                            <tr>
                                <td class="text-left">@teamName</td>
                                <td class="text-center">
                                    @using (Html.BeginForm("ShowTeamUsers", "Manager"))
                                    {
                                        @Html.Hidden("teamName", teamName)
                                        <input type="submit" class="btn btn-primary btn-sm" value="Show users" />
                                    }
                                </td>
                                <td class="text-center">
                                    @using (Html.BeginForm("ShowTeamReportWithValidation", "Manager"))
                                    {
                                        @Html.Hidden("returnUrl", Request.Url.PathAndQuery)
                                        @Html.Hidden("BarChart", true)
                                        @Html.Hidden("PieChart", false)
                                        @Html.Hidden("ColumnChart", false)
                                        @Html.Hidden("teamName", teamName)
                                        @Html.Hidden("isDefaultRequest", true)
                                        <input type="submit" class="btn btn-primary btn-sm" value="Show report" />
                                    }
                                </td>
                                <td class="text-center">
                                    @using (Html.BeginForm("ShowTeamReportByUsersWithValidation", "Manager"))
                                    {
                                        @Html.Hidden("teamName", teamName)
                                        @Html.Hidden("isDefaultRequest", true)
                                        <input type="submit" class="btn btn-primary btn-sm" value="Show report" />
                                    }
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
           
        </div>
</div>
<script type="text/javascript">
function ChangeDepartmentDivHeight()
{
    document.getElementById("tableDiv").style.height = 95+32+@Model.DepartmentNames.Count*41+30+"px";
}

function ChangeTeamDivHeight()
{
    document.getElementById("tableDiv").style.height = 95+32+@Model.TeamNames.Count*41+30+"px";
}
    window.onload = function () {
        ChangeDepartmentDivHeight();
    }

</script>
