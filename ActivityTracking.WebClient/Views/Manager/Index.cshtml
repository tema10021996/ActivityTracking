@model List<string>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";

}
<div class="panel panel-default">
    <div class="panel-heading">
        <div class="text-right">
            @using (Html.BeginForm("FindUserReport", "Manager"))
            {
                @Html.Hidden("returnUrl", Request.Url.PathAndQuery)
                @Html.Label("Find user by login: ")
                @Html.TextBox("userName")
                <input type="submit" class="btn  btn-primary btn-sm" value="Find" />
            }
        </div>

        <h4 class="text-center"><b>My departments</b></h4>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-center">Department</th>
                <th class="text-center">Show users</th>
                <th class="text-center">Show report</th>
            </tr>
            @foreach (var department in Model)
            {
                <tr>
                    <td class="text-left">@department</td>
                    <td class="text-center">
                        @using (Html.BeginForm("ShowUsers", "Manager"))
                        {
                            @Html.Hidden("departmentName", department)
                            <input type="submit" class="btn btn-primary btn-sm" value="Show users" />
                        }
                    </td>
                    <td class="text-center">
                        @using (Html.BeginForm("ShowGroupReportByUsers", "Manager"))
                        {
                            @Html.Hidden("departmentName", department)
                            @Html.Hidden("start", DateTime.Now.AddDays(-7).Date)
                            @Html.Hidden("end", DateTime.Now.AddDays(-1).Date)
                            <input type="submit" class="btn btn-primary btn-sm" value="Show report" />
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
