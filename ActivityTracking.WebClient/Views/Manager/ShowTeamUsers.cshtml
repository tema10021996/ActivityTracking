@model ActivityTracking.WebClient.Models.ManagerShowUsersViewModel
@{
    ViewBag.Title = "ShowUsers";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <div class="text-right">
            @using (Html.BeginForm("FindUserReport", "Manager"))
            {
                <div class="input-group">
                    @Html.Hidden("returnUrl", Request.Url.PathAndQuery)
                    @Html.TextBox("userName", null, new { @class = "form-control", placeholder = "Search user by login", style = "width:200px" })
                    <div class="input-group-btn">
                        <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                    </div>
                </div>
            }
        </div>
        <h4 class="text-center"><b>Team: </b> @Model.DepartmentOrTeamName</h4>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-center">Login</th>
                <th class="text-center">First name</th>
                <th class="text-center">Last name</th>
                <th class="text-center">Department</th>
                <th class="text-center">Team</th>
            </tr>

            @foreach (var userInfoModel in Model.UserInfoModels)
            {
                <tr>
                    <td class="text-left">@Html.ActionLink(userInfoModel.userInformarion.Login, "ShowUserReportWithValidation", new { userName = userInfoModel.userInformarion.Login, isDefaultRequest = true })</td>
                    <td class="text-left">@userInfoModel.userInformarion.FirstName</td>
                    <td class="text-left">@userInfoModel.userInformarion.LastName</td>
                    <td class="text-left">@userInfoModel.userInformarion.Department</td>
                    <td class="text-left">@userInfoModel.userInformarion.Team</td>
                </tr>
            }
        </table>
    </div>
</div>
