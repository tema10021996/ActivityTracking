@model ActivityTracking.WebClient.Models.ChooseDepartmentOrTeamViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_ManagerLayout.cshtml";

}
<div class="panel panel-default">
    <div class="panel-heading">
        <div class="text-right">
            @using (Html.BeginForm("FindUserReport", "Manager"))
            {
                <div class="input-group">
                    @Html.Hidden("returnUrl", Request.Url.PathAndQuery)                 
                    @Html.TextBox("userName", null, new { @class = "form-control", placeholder = "Search user by login", style = "width:200px" })
                    <div class="input-group-btn">
                        <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                    </div>
                </div>
            }
        </div>
        <br>
    </div>
    <div style="height:200px">
        <ul class="nav nav-tabs nav-justified">
            <li class="active"><a data-toggle="tab" href="#department" style="color: #555555;"><h4>Choose deparment</h4></a></li>
            <li><a data-toggle="tab" href="#team" style="color: #555555;"><h4>Choose team</h4></a></li>
        </ul>

        <div class="tab-content" style="padding: 15px">
            <div id="department" class="tab-pane fade in active" style="width:81.2%">
            
                @using (Html.BeginForm("ShowDepartmentReportWithValidation", "Manager"))
                {
                    <div class="text-center">
                        <br>
                        @Html.Hidden("returnUrl", Request.Url.PathAndQuery)
                        @Html.Hidden("BarChart", true)
                        @Html.Hidden("PieChart", false)
                        @Html.Hidden("ColumnChart", false)
                        @Html.Hidden("isDefaultRequest", true)
                        @Html.DropDownList("DepartmentList", Model.DepartmentList, new { @class = "Myform-control" })
                        <input type="submit" class="btn  btn-primary btn-sm " value="Show department report" />
                    </div>
                }
            </div>
            <div id="team" class="tab-pane fade" style="width:81.2%">
                @using (Html.BeginForm("ShowTeamReportWithValidation", "Manager"))
                {
                    <div class="text-center">
                        <br>
                        @Html.Hidden("returnUrl", Request.Url.PathAndQuery)
                        @Html.Hidden("BarChart", true)
                        @Html.Hidden("PieChart", false)
                        @Html.Hidden("ColumnChart", false)
                        @Html.Hidden("isDefaultRequest", true)
                        @Html.DropDownList("teamName", Model.TeamName, new { @class = "Myform-control" })
                        <input type="submit" class="btn  btn-primary btn-sm " value="Show team report" />
                    </div>
                }
            </div>           
        </div>
    </div> 
    </div>