@using Microsoft.AspNet.Identity
@using Microsoft.AspNet.Identity.EntityFramework
@model ActivityTracking.WebClient.Models.AdminIndexViewModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="text-center">All users</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-center">User</th>
                <th class="text-center">User group</th>
                <th class="text-center">user role</th>
                <th class="text-center">Change user group</th>
                <th class="text-center">Change user role</th>
                <th class="text-center">Delete user </th>
            </tr>
            @foreach (var userViewModel in Model.UsersViewModelsList)
            {
                string userGroupName = userViewModel.User.Group == null ? "don't have group" : userViewModel.User.Group.Name;
                <tr>
                    <td class="text-left">@userViewModel.User.UserName</td>
                    @if (userViewModel.User.UserName == "Admin")
                    {
                        <td class="text-left"></td>
                    }
                    else if (userViewModel.User.Group == null)
                    {
                        <td class="text-left">don't have group</td>
                    }
                    else
                    {
                        <td>@Html.ActionLink(userViewModel.User.Group.Name, "ShowGroupInfo", new { userViewModel.User.Group.Id })</td>
                    }
                    <td class="text-left">@userViewModel.UserRole</td>
                    @if (userViewModel.UserRole == "admin")
                    {
                        <td class="text-center"></td>
                    }
                    else
                    {
                    <td class="text-center">
                        <button  type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#@userViewModel.User.Id">Change user group</button>
                        <!-- Modal -->
                        <div id="@userViewModel.User.Id" class="modal fade" role="dialog">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    @using (Html.BeginForm("ChangeUserGroup", "Admin"))
                                    {
                                        <div class="modal-body">
                                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                                            @Html.Label("Current group: " + userGroupName)
                                            <br>
                                            @Html.Label("Change to: ")
                                            @Html.DropDownList("GroupList")
                                        </div>
                                        <div class="modal-footer">
                                                @Html.Hidden("Id", userViewModel.User.Id)
                                                <input type="submit" class="btn btn-danger btn-sm" value="Change" />
                                                <button type="button" class="btn btn-primary btn-sm" data-dismiss="modal">Close</button>
                                        </div>
                                    }
                                </div>

                            </div>
                        </div>
                    </td>
                    }
                    @if (userViewModel.UserRole == "admin")
                    {
                        <td class="text-center"></td>
                    }
                    else
                    {
                    <td class="text-center">
                        <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#@userViewModel.User.UserName">Change user role</button>
                        <!-- Modal -->
                        <div id="@userViewModel.User.UserName" class="modal fade" role="dialog">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    @using (Html.BeginForm("ChangeUserRole", "Admin"))
                                    {
                                        <div class="modal-body">
                                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                                            @Html.Label("Current role: " + userViewModel.UserRole)
                                            <br>
                                            @Html.Label("Change to: ")
                                            @Html.DropDownList("RoleList")
                                        </div>
                                        <div class="modal-footer">
                                            @Html.Hidden("Id", userViewModel.User.Id)
                                            <input type="submit" class="btn btn-danger btn-sm" value="Change" />
                                            <button type="button" class="btn btn-primary btn-sm" data-dismiss="modal">Close</button>
                                        </div>
                                    }
                                </div>

                            </div>
                        </div>
                    </td>
                    }

                    @if (userViewModel.UserRole == "admin")
                    {
                        <td class="text-center"></td>
                    }
                    else
                    {
                    <td class="text-center">
                        <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#@userViewModel.User.Id.ToUpper()">Delete user</button>
                        <!-- Modal -->
                        <div id="@userViewModel.User.Id.ToUpper()" class="modal fade" role="dialog">
                            <div class="modal-dialog">
                                <div class="modal-content">                                
                                    <div class="modal-body text-center">
                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                        <h3>Are you sure?</h3>
                                    </div>                                  
                                    <div class="modal-footer">
                                        @using (Html.BeginForm("DeleteUser", "Admin"))
                                        {
                                            @Html.Hidden("Id", userViewModel.User.Id)
                                            <input type="submit" class="btn btn-danger btn-sm" value="Delete" />
                                            <button type="button" class="btn btn-primary btn-sm" data-dismiss="modal">Close</button>
                                        }                                      
                                    </div>
                                </div>

                            </div>
                        </div>
                    </td>
                    }
                </tr>
            }
        </table>
    </div>   
</div>
