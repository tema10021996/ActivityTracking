@model ActivityTracking.WebClient.Models.AdminViewModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>List of users</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-center">User</th>
                <th class="text-center">User group</th>
                <th class="text-center">Change group</th>
                <th class="text-center">Delete user </th>
            </tr>
            @foreach (var user in Model.UsersList)
            {
               string userGroupName = user.Group == null ? "don't have group" : user.Group.Name;
                <tr>
                    <td class="text-center">@user.UserName</td>
                    <td class="text-center">@userGroupName</td>
                    <td >
                        <button name="" type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#@user.Id">Change group</button>
                        <!-- Modal -->
                        <div id="@user.Id" class="modal fade" role="dialog">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    @using (Html.BeginForm("ChangeGroup", "Admin"))
                                    {
                                        <div class="modal-body">
                                            <button type="button" class="close" data-dismiss="modal">&times;</button>
                                            @Html.Label("Current group: " + userGroupName)
                                            <br>
                                            @Html.Label("Change to: ")
                                            @Html.DropDownList("GroupList")
                                        </div>
                                        <div class="modal-footer">
                                                @Html.Hidden("Id", user.Id)
                                                <input type="submit" class="btn btn-danger btn-sm" value="Change" />
                                                <button type="button" class="btn btn-primary btn-sm" data-dismiss="modal">Close</button>
                                        </div>
                                    }
                                </div>

                            </div>
                        </div>
                    </td>
                    <td class="text-center">
                        <button type="button" class="btn btn-primary btn-sm" data-toggle="modal" data-target="#@user.Id.ToUpper()">Delete user</button>
                        <!-- Modal -->
                        <div id="@user.Id.ToUpper()" class="modal fade" role="dialog">
                            <div class="modal-dialog">
                                <div class="modal-content">                                
                                    <div class="modal-body text-center">
                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                        <h3>Are you sure?</h3>
                                    </div>                                  
                                    <div class="modal-footer">
                                        @using (Html.BeginForm("Delete", "Admin"))
                                        {
                                            @Html.Hidden("Id", user.Id)
                                            <input type="submit" class="btn btn-danger btn-sm" value="Delete" />
                                            <button type="button" class="btn btn-primary btn-sm" data-dismiss="modal">Close</button>
                                        }                                      
                                    </div>
                                </div>

                            </div>
                        </div>
                    </td>
                </tr>
            }
        </table>
    </div>   
</div>
