@model ActivityTracking.WebClient.Models.RegisterViewModel

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<h2>Registration</h2>
<hr />
@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <div> 
        @Html.ValidationSummary(false)
        <div class="form-group">
            @Html.LabelFor(model => model.Login, new { @class = "col-md-2 control-label" })
            <div>
                @Html.TextBoxFor(model => model.Login, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
            <div>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Password confirm", new { @class = "col-md-2 control-label" })
            <div>
                @Html.PasswordFor(m => m.PasswordConfirm, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2">
                <input type="submit" class="btn btn-primary" value="Register" />
            </div>
        </div>
    </div>
}